---
"app/helpers":
  UtilityFunction:
    enabled: false
"test/support":
  UtilityFunction:
    enabled: false
"app/controllers":
  InstanceVariableAssumption:
    enabled: false
TooManyStatements:
  max_statements: 6
UtilityFunction:
  public_methods_only: true
IrresponsibleModule:
  enabled: false
NestedIterators:
  exclude:
  - RegionFinder#initialize
PrimaDonnaMethod:
  exclude:
  - PriceBook::Page
  - PriceBook
  - ShoppingList::Item
  - ShoppingList
Attribute:
  exclude:
  - PriceBook#shopper
UncommunicativeParameterName:
  exclude:
  - PriceBook#create_shopping_list!
  - ShoppingList#create_item!
  - ShoppingList#update_item!
LongParameterList:
  exclude:
  - add_new_entry_to_page