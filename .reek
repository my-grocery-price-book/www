---
"app/helpers":
  UtilityFunction:
    enabled: false
"test/support":
  UtilityFunction:
    enabled: false
TooManyStatements:
  max_statements: 6
UtilityFunction:
  public_methods_only: true
IrresponsibleModule:
  enabled: false
NestedIterators:
  exclude:
  - RegionFinder#initialize
PrimaDonnaMethod:
  exclude:
  - PriceBook::Page
  - PriceBook
  - ShoppingList::Item
  - ShoppingList
Attribute:
  exclude:
  - PriceBook#shopper
UncommunicativeParameterName:
  exclude:
  - PriceBook#create_shopping_list!
  - ShoppingList#create_item!
  - ShoppingList#update_item!
FeatureEnvy:
  exclude:
  - CreatePurchases#change
  - CreatePurchaseItems#change
  - DeviseCreateShoppers#change
  - CreateRegularLists#change
  - CreateShopperApiKeys#change
  - CreatePriceBooks#change
  - CreateShoppingLists#change
  - CreateShoppingListItems#change
  - CreateShoppingListItemPurchases#change
  - CreateMembers#change
  - CreateInvites#change
  - CreateStores#change
  - CreatePriceEntries#change
  - CreateEntryOwners#change
LongParameterList:
  exclude:
  - add_new_entry_to_page
InstanceVariableAssumption:
  exclude:
  - BookRegionsController
  - BookStoresController
  - EntriesController
  - GuestController
  - InvitesController
  - PriceBookPagesController
  - ShoppingListItemsController
  - PriceBook
  - SocialProfile
  - PersonaSession
  - EntriesIntegrationTest
  - EntrySuggestionsIntegrationTest
