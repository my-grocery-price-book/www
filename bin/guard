require 'pathname'

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

system! 'gem install bundler --conservative'
system('BUNDLE_GEMFILE=Gemtools bundle check') || system!('BUNDLE_GEMFILE=Gemtools bundle install')

ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../Gemtools",
  Pathname.new(__FILE__).realpath)

require "rubygems"
require "bundler/setup"

load Gem.bin_path("guard", "guard")
