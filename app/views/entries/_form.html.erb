<h1><%= title %></h1>

<%= form_for(entry, url: form_action) do |f| %>
    <% if error_messages.present? %>
      <div class="error-explanation">
        <ul>
          <% error_messages.each do |message| %>
              <%= message %>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :store_id, 'Store' %><br>
      <%= f.select :store_id, selectable_stores %> or
      <a href="<%= new_store_href %>">New Store</a>
    </div>
    <div class="form-group">
      <%= f.label :date_on %><br>
      <%= f.date_field :date_on %>
    </div>
    <div class="form-group">
      <%= f.label :product_name %><br>
      <%= f.text_field :product_name %>
    </div>
    <div class="form-group">
      <%= f.label :amount %><br>
      <%= f.number_field :amount %>
    </div>
    <div class="form-group">
      <%= f.label :package_size %><br>
      <%= f.number_field :package_size %><%= package_unit %>
    </div>
    <div class="form-group">
      <%= f.label :total_price %><br>
      <%= f.number_field :total_price %>
    </div>
    <button class="btn btn-primary">Save</button>
    <a href="<%= back_href %>" class="btn btn-default">Back</a>
<% end %>

