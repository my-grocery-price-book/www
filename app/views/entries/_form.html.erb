<h1><%= title %></h1>

<%= form_for(entry, url: form_action) do |f| %>
    <%= render 'error_messages', error_messages: error_messages %>
    <div class="form-group">
      <%= f.label :store_id, 'Store' %>
      <%= f.select :store_id, selectable_stores, {}, class: 'form-control' %> or
      <a href="<%= new_store_href %>">New Store</a>
    </div>
    <div class="form-group">
      <%= f.label :date_on %>
      <%= f.date_field :date_on, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :product_name %>
      <%= f.text_field :product_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :amount %>
      <%= f.number_field :amount, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :package_size %>
      <div class="input-group">
        <%= f.number_field :package_size, class: 'form-control', aria: {describedby: "package_unit"} %>
        <span class="input-group-addon" id="package_unit"><%= package_unit %></span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :total_price %>
      <%= f.text_field :total_price, class: 'form-control' %>
    </div>
    <button class="btn btn-primary">Save</button>
    <a href="<%= back_href %>" class="btn btn-default">Back</a>
<% end %>

