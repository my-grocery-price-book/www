<div class="row">
  <div class="col-md-12">
    <h1>Listing Purchases</h1>
    <form action="<%= purchases_path %>" method="post">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <button class='btn btn-default'>New Purchases</button>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Purchased on</th>
        <th>Store</th>
        <th>Location</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @purchases.each do |purchase| %>
        <tr>
          <td><%= purchase.purchased_on %></td>
          <td><%= purchase.store %></td>
          <td><%= purchase.location %></td>
          <td>
            <%= link_to 'Edit', edit_purchase_path(purchase), class: 'btn btn-default' %>
            <%= link_to 'Delete', delete_purchase_path(purchase), class: 'btn btn-default' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
