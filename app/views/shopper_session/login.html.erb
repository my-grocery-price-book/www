<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h1 class="text-center">Log in</h1>
    <hr>
    <form action="/auth/<%= Rails.env.test? ? 'developer' : 'auth0' %>" method="post">

      <div class="form-group">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden"/>
          <button class="btn btn-default btn-block">Create Account or Login</button>
      </div>
    </form>

    <hr/>
    <form action="<%= guest_login_path %>" method="post">

      <div class="form-group">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden"/>
          <button class="btn btn-default btn-block">Log in as Guest</button>
      </div>
    </form>
</div>

