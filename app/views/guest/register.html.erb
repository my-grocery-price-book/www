<div class="row">
  <div class="col-sm-6">
    <h2>
      Register Account
    </h2>
    <p>Ready to convert your guest account into a real account?</p>
        <form action="/auth/<%= Rails.env.test? ? 'developer' : 'auth0' %>" method="post">

      <div class="form-group">
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden"/>
          <button class="btn btn-default btn-block">Create Account or Login</button>
      </div>
    </form>
  </div>
</div>
