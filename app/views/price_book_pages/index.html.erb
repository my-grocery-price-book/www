<%= render 'index_header',
           new_page_link: new_price_book_page_path,
           invite_link: new_price_book_invite_path(@price_book) %>


<div class="row price-book-pages">
  <% @price_book_pages.each do |price_book_page| %>
    <div class="col-sm-4 col-md-2">
      <div class="thumbnail">
        <img src="http://placehold.it/220x165?text=Coming+Soon" alt="Coming Soon">
        <div class="caption">
          <h3>
            <a href="<%= price_book_page_path(price_book_page) %>">
              <%= price_book_page.name %>
            </a>
          </h3>
          <p><%= price_book_page.category %>,<%= price_book_page.unit %></p>
          <div class="btn-group" role="group">
            <a href="<%= edit_price_book_page_path(price_book_page) %>"
                 class="btn btn-primary"
                 role="button">Edit</a>
            <a href="<%= delete_price_book_page_path(price_book_page) %>"
               class="btn btn-default"
               role="button">Delete</a>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

