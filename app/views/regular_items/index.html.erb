<div class="row">
  <div class="col-md-12">
    <h1>Regular Shopping Items</h1>

    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
        </tr>
      </thead>

      <tbody>
        <% @regular_items.each do |regular_item| %>
          <tr>
            <td><%= regular_item.name %></td>
            <td><%= regular_item.category %></td>
            <td>
              <%= link_to 'Edit', edit_regular_item_path(regular_item), class: 'btn btn-default'%>
              <%= link_to 'Remove', delete_regular_items_path(regular_item), class: 'btn btn-default'%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Regular Item', new_regular_item_path, class: 'btn btn-default' %>
  </div>
</div>

